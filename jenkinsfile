pipeline {
    agent any
    stages {
        stage('test') {
            steps {
                withEnv(['PATH+EXTRA=/usr/sbin:/usr/bin:/sbin:/bin']) {
                sh'''
                    ls
                    pwd
                    rm -rf go.mod go.sum
                    go env
                    go mod init github.com/romberli/das
                    go mod tidy
                    cd internal/app/query
                    go test -v service_test.go -test.run Service_GetConfig
                '''
                }
            }
        }
    }
}
