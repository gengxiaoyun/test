pipeline {
    agent any
    stages {
        stage('test') {
            steps {
                withEnv(['PATH+EXTRA=/usr/sbin:/usr/bin:/sbin:/bin', "GOPATH=${WORKSPACE}"]) {
                sh'''
                    ls
                    pwd
                    rm -f go.mod
                    go mod init ./
                    cd internal/app/query
                    go test -v service_test.go service.go config.go query.go repository.go -test.run Service_GetConfig
                '''
                }
            }
        }
    }
}
